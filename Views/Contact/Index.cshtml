@model EventRegistration.Models.Contact
@{
    ViewData["Title"] = "Contact Us";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-envelope"></i> Contact Us</h1>
        <p>Get in touch with our team for any questions or support</p>
    </div>
</div>

<div class="contact-section">
    <div class="container">
        <div class="contact-container">
            <div class="contact-form-section">
                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
                {
                    <div class="success-message">
                        <i class="fas fa-check-circle"></i>
                        @ViewBag.SuccessMessage
                    </div>
                }

                <form asp-action="Index" method="post" class="contact-form">
                    @Html.AntiForgeryToken()

                    <div class="form-header">
                        <h2>Send us a Message</h2>
                        <p>We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-user"></i> Your Name
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="Name" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                        <span asp-validation-for="Email" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Message" class="form-label">
                            <i class="fas fa-comment"></i> Message
                        </label>
                        <textarea asp-for="Message" class="form-control textarea" rows="6" placeholder="Type your message here..."></textarea>
                        <span asp-validation-for="Message" class="validation-error"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary btn-large">
                            <i class="fas fa-paper-plane"></i> Send Message
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            <i class="fas fa-undo"></i> Clear Form
                        </button>
                    </div>
                </form>
            </div>

            <div class="contact-info-section">
                <div class="contact-info">
                    <h3>Get in Touch</h3>
                    <p>Have questions about the event? We're here to help!</p>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Address</h4>
                            <p>BEL BLOCK DEI<br>SRMIST, Chennai - 603203<br>Tamil Nadu, India</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Phone</h4>
                            <p>+91 8303459955<br>Available: Mon-Fri, 9AM-6PM</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Email</h4>
                            <p>foundersclub@gmail.com<br>support@foundersclub.com</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        
                    </div>
                </div>

                <div class="social-connect">
                    <h4>Follow Us</h4>
                    <div class="social-links">
                        <a href="#" class="social-link facebook">
                            <i class="fab fa-facebook-f"></i>
                            <span>Facebook</span>
                        </a>
                        <a href="#" class="social-link twitter">
                            <i class="fab fa-twitter"></i>
                            <span>Twitter</span>
                        </a>
                        <a href="#" class="social-link linkedin">
                            <i class="fab fa-linkedin-in"></i>
                            <span>LinkedIn</span>
                        </a>
                        <a href="#" class="social-link instagram">
                            <i class="fab fa-instagram"></i>
                            <span>Instagram</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}