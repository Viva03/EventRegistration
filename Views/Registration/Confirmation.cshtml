@{
    ViewData["Title"] = "Registration Confirmed";
}

<div class="confirmation-section">
    <div class="container">
        <div class="confirmation-card">
            <div class="confirmation-header">
                <div class="success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h1>Registration Successful!</h1>
                <p>Thank you for registering for Founders Club Recruitment 2025</p>
            </div>

            <div class="confirmation-details">
                <h2>Hi @ViewBag.Name,</h2>
                <p>Your registration has been successfully completed. We've sent a confirmation email to <strong>@ViewBag.Email</strong> with all the event details.</p>

                <div class="confirmation-info">
                    <div class="info-card">
                        <i class="fas fa-calendar-alt"></i>
                        <div>
                            <h3>Interview Date</h3>
                            <p>August 18-23, 2025</p>
                        </div>
                    </div>
                    <div class="info-card">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <h3>Venue</h3>
                            <p>BEL BLOCK - DEI</p>
                        </div>
                    </div>
                    <div class="info-card">
                        <i class="fas fa-clock"></i>
                        <div>
                            <h3>Time</h3>
                            <p>9:00 AM - 6:00 PM</p>
                        </div>
                    </div>
                </div>

                <div class="next-steps">
                    <h3>What's Next?</h3>
                    <ul>
                        <li><i class="fas fa-envelope"></i> Check your email for detailed event information</li>
                        <li><i class="fas fa-id-card"></i> Your digital pass will be sent 24 hours before the event</li>
                        <li><i class="fas fa-users"></i> Join our WhatsApp group for updates (link in email)</li>
                        <li><i class="fas fa-map"></i> Event location and parking details in confirmation email</li>
                    </ul>
                </div>
            </div>

            <div class="confirmation-actions">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home"></i> Back to Home
                </a>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-question-circle"></i> Have Questions?
                </a>
            </div>

            <div class="social-share">
                <p>Share the excitement:</p>
                <div class="share-buttons">
                    <a href="#" class="share-btn facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="share-btn twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="share-btn linkedin">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a href="#" class="share-btn whatsapp">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>